import pandas as pd
df = pd.read_csv(r"C:\Users\alvit\Downloads\mumbai_traffic_pollution_dataset_messy.csv")
df['timestamp'] = pd.to_datetime(df['timestamp'], errors='coerce')
df = df.dropna(subset=['timestamp'])
df = df.sort_values('timestamp')
# Group and average traffic speed
df_ts = df.groupby('timestamp')['traffic_speed_kmph'].mean().reset_index()
df_ts.set_index('timestamp', inplace=True)
print(df_ts.head())



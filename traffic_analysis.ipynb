from sqlalchemy import create_engine
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import LabelEncoder
from sklearn.ensemble import RandomForestClassifier


# Create connection engine
engine = create_engine("mysql+pymysql://alvith:1234@localhost/trafficdb")

# Read data directly from MySQL
df = pd.read_sql("SELECT * FROM traffic_data", con=engine)

print("✅ Data loaded successfully from MySQL!")
print(df.head())

def label_go_out(row):
    if row['traffic_speed_kmph'] < 15 or row['air_quality_index'] > 150 or 'rain' in row['weather'].lower():
        return 'No'
    else:
        return 'Yes'

df['go_out'] = df.apply(label_go_out, axis=1)


# Define features and target
X = df[['traffic_speed_kmph', 
        'free_flow_speed_kmph',
        'congestion_level_percent',
        'vehicle_count', 
        'air_quality_index']]
y = df['go_out']

# Encode target (Yes/No → 1/0)
le = LabelEncoder()
y_encoded = le.fit_transform(y)

X_train, X_test, y_train, y_test = train_test_split(
    X, y_encoded, test_size=0.2, random_state=42
)

model = RandomForestClassifier(n_estimators=100, random_state=42)
model.fit(X_train, y_train)

print("✅ Model trained successfully!")

print(model.feature_names_in_)
